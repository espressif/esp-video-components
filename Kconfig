menu "Espressif Video Configuration"
    orsource "commons/soc/$IDF_TARGET/include/soc/Kconfig.soc_caps.in"

    rsource "boards/Kconfig.boards"
    rsource "drivers/interfaces/Kconfig.interfaces"

    choice ESP_VIDEO_API_SELECTION
        prompt "Video API Selection"
        default ESP_VIDEO_API_LINUX
        help
            Select espressif video SDK API.

        config ESP_VIDEO_API_LINUX
            bool "Linux POSIX API with L4V2"
            help
                Select this option, users can use POSIX API with L4V2.

        config ESP_VIDEO_API_CORE
            bool "Espressif Video Core API"
            help
                Select this option, users can use espressif video core API.
    endchoice

    config ESP_VIDEO_MEDIA_CONTROLLER
        bool "Media controller enable"
        default n
    
    config ESP_VIDEO_MEDIA_EMBED_FILE
        string "Configuration file for media pileline"
        default "configs/default.json"
        depends on ESP_VIDEO_MEDIA_CONTROLLER

    menuconfig ESP_VIDEO_LOG
        bool "Enable Video Log"
        default y
        help
            Enable video log.

    if ESP_VIDEO_LOG
        config ESP_VIDEO_LOG_ERROR
            bool "Enable Video Error Log"
            default y
            help
                Enable video error log.

        config ESP_VIDEO_LOG_INFO
            bool "Enable Video Information Log"
            default y
            help
                Enable video information log.

        config ESP_VIDEO_LOG_DEBUG
            bool "Enable Video Debug Log"
            default y
            help
                Enable video debug log.
    endif

    config ESP_VIDEO_CHECK_PARAMETERS
        bool "Check Video Function Parameters"
        default y
        help
            Select this option, espressif video core functions will check
            input parameters.

    rsource "drivers/isp/Kconfig.isp"
    rsource "drivers/sccb/Kconfig.sccb"
    rsource "utils/Kconfig.utils"
endmenu
