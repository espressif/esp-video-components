menuconfig CAMERA_GC0308
    bool "GC0308"
    default n
    depends on SOC_LCDCAM_CAM_SUPPORTED
    help
        Enable support for the GC0308 CMOS image sensor.

if CAMERA_GC0308
    menu "Auto detect GC0308"
        config CAMERA_GC0308_AUTO_DETECT_DVP_INTERFACE_SENSOR
            bool "Detect for DVP interface sensor"
            default y
            help
                When enabled, the GC0308 sensor will be automatically detected
                and initialized on the DVP interface at startup without requiring
                manual detection call(gc0308_detect) in your application.
    endmenu

    menu "Choose supported formats for DVP interface"
        config CAMERA_GC0308_DVP_GRAY_320X240_20FPS
            bool "DVP 8-bit, 20M input,  320x240  20fps, GRAY"
            default n
            help
                Grayscale format at 320x240 resolution (QVGA) with 20fps framerate.
                Requires 8-bit DVP interface and 20MHz input.

        config CAMERA_GC0308_DVP_GRAY_640X480_16FPS
            bool "DVP 8-bit, 20M input,  640x480  16fps, GRAY"
            default n
            help
                Grayscale format at 640x480 resolution (VGA) with 16fps framerate.
                Requires 8-bit DVP interface and 20MHz input.

        config CAMERA_GC0308_DVP_RGB565_320X240_20FPS
            bool "DVP 8-bit, 20M input,  320x240  20fps, RGB565"
            default n
            help
                Standard color format using RGB565 at 320x240 resolution (QVGA)
                with 20fps framerate. Requires 8-bit DVP interface and 20MHz input.

        config CAMERA_GC0308_DVP_RGB565_640X480_16FPS
            bool "DVP 8-bit, 20M input,  640x480  16fps, RGB565"
            default n
            help
                Standard color format using RGB565 at 640x480 resolution (VGA)
                with 16fps framerate. Requires 8-bit DVP interface and 20MHz input.

        config CAMERA_GC0308_DVP_YUV422_320X240_20FPS
            bool "DVP 8-bit, 20M input,  320x240  20fps, YUV422"
            default n
            help
                YUV422 color format at 320x240 resolution (QVGA) with 20fps framerate.
                Requires 8-bit DVP interface and 20MHz input.

        config CAMERA_GC0308_DVP_YUV422_640X480_16FPS
            bool "DVP 8-bit, 20M input,  640x480  16fps, YUV422"
            default y
            help
                Standard color format using YUV422 at 640x480 resolution (VGA)
                with 16fps framerate. Requires 8-bit DVP interface and 20MHz input.
    endmenu

    choice CAMERA_GC0308_DVP_DEFAULT_FMT
        prompt "Select default output format for DVP interface"
        default CAMERA_GC0308_DVP_DEFAULT_FMT_YUV422_640X480_16FPS
        help
            This is an internal choice that ensures only one format can be selected as default.
            It is automatically controlled by the "Set as default format" options above.

        config CAMERA_GC0308_DVP_DEFAULT_FMT_GRAY_320X240_20FPS
            bool "DVP 8-bit, 20M input,  320x240  20fps, GRAY"
            depends on CAMERA_GC0308_DVP_GRAY_320X240_20FPS

        config CAMERA_GC0308_DVP_DEFAULT_FMT_GRAY_640X480_16FPS
            bool "DVP 8-bit, 20M input,  640x480  16fps, GRAY"
            depends on CAMERA_GC0308_DVP_GRAY_640X480_16FPS

        config CAMERA_GC0308_DVP_DEFAULT_FMT_RGB565_320X240_20FPS
            bool "DVP 8-bit, 20M input,  320x240  20fps, RGB565"
            depends on CAMERA_GC0308_DVP_RGB565_320X240_20FPS

        config CAMERA_GC0308_DVP_DEFAULT_FMT_RGB565_640X480_16FPS
            bool "DVP 8-bit, 20M input,  640x480  16fps, RGB565"
            depends on CAMERA_GC0308_DVP_RGB565_640X480_16FPS

        config CAMERA_GC0308_DVP_DEFAULT_FMT_YUV422_320X240_20FPS
            bool "DVP 8-bit, 20M input,  320x240  20fps, YUV422"
            depends on CAMERA_GC0308_DVP_YUV422_320X240_20FPS

        config CAMERA_GC0308_DVP_DEFAULT_FMT_YUV422_640X480_16FPS
            bool "DVP 8-bit, 20M input,  640x480  16fps, YUV422"
            depends on CAMERA_GC0308_DVP_YUV422_640X480_16FPS
    endchoice # CAMERA_GC0308_DVP_DEFAULT_FMT

    config CAMERA_GC0308_DVP_IF_FORMAT_INDEX_DEFAULT
        int
        default 0 if CAMERA_GC0308_DVP_DEFAULT_FMT_YUV422_640X480_16FPS
        default 1 if CAMERA_GC0308_DVP_DEFAULT_FMT_RGB565_640X480_16FPS
        default 2 if CAMERA_GC0308_DVP_DEFAULT_FMT_GRAY_640X480_16FPS
        default 3 if CAMERA_GC0308_DVP_DEFAULT_FMT_YUV422_320X240_20FPS
        default 4 if CAMERA_GC0308_DVP_DEFAULT_FMT_GRAY_320X240_20FPS
        default 5 if CAMERA_GC0308_DVP_DEFAULT_FMT_RGB565_320X240_20FPS
        help
            Sets the default configuration for the DVP interface.
            Use query_support_formats() API to get more format options.
endif
